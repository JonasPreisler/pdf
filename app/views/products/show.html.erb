<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <ol class="breadcrumb">
            <li>
              <%= link_to "Home", root_path %>
            </li>
            <li>
              <%= link_to @product.material.name, material_path(@product.material) %>
            </li>
            <li>
              <%= link_to @product.seller.name, seller_path(@product.seller) %>
            </li>
            <li class="active">
                <strong><%= @product.name %></strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>


<div class="row">
  <div class="col-xs-6 col-md-3 hide-mobile">
    <%= render 'products/sidebar_product' %>
  </div>
  <div class="col-md-8">
    <div class="nano-card ">
      <%# SELLER PROFILE DESKTOP & TABLET %>
      <div class="seller-hide-mobile">
        <div class="col-xs-6 col-md-6">
          <strong class="product-title"><%= @product.name %></strong> <span class="product-comment"><%= "(#{@product.gram}g)" if @product.gram %><%= "(#{@product.mililiter}mL)" if @product.mililiter%></span>
          <br />
          Store: <%= link_to @product.seller.name, seller_path(@product.seller), class: 'product-links' %> <span class="index-comment seller-hide-mobile">(<%= @product.seller.country if @product.seller %>)</span>
          <br />
          Material: <%= link_to @product.material.name, @product.material, class: 'product-links' %>
        
          <div class="country">
            <div class="price">$<%= @product.price %></div>
          </div>

          <br />

          <dl class="dl-horizontal">
            <% if @product.purity %>
              <dt>Purity</dt>
              <dd><%= "#{@product.purity}%" if @product.purity %></dd>
            <% end %>
            <% if @product.length %>
              <dt>Length</dt>
              <dd><%= "#{@product.length}nm ~" if @product.length %> <%= "#{@product.length_two}nm" if @product.length_two %></dd>
            <% end %>
            <% if @product.diameter %>
              <dt>Diameter</dt>
              <dd><%= "Ø #{@product.diameter}" if @product.diameter %></dd>
            <% end %>
            <%# if @product.solvent %>
            <%# else %>
              <%#<dt>Solvent</dt>
              <dd><%= @product.solvent %><%#</dd>
            <%# end %>
            <% if @product.surface_area %>
              <dt>Surface area</dt>
              <dd><%= "#{@product.surface_area} μm" %> </dd>
            <% end %>
          </dl>
          <%#<% if @seller.material_id? %><%#= link_to @seller.material.name, @seller.material, class: 'sub-title' %><%# end %>
        </div>
        <div class="col-xs-6 col-md-6">
          <% if @product.product_image? %>
            <%= image_tag @product.product_image.url(:small), class: 'img-responsive' %>
          <% else %>
            <%= image_tag '/thumbnail.png', class: 'img-responsive' %>
          <% end %>
        </div>

      </div>
      <%# END OF SELLER PROFILE DESKTOP & TABLET %>

      <%# SELLER PROFILE MOBILE %>
      <div class="seller-only-mobile">
        <strong class="product-title"><%= @product.name %></strong> <span class="product-comment"><%= "(#{@product.gram}g)" if @product.gram %><%= "(#{@product.mililiter}mL)" if @product.mililiter%></span>
          <br />
          Store: <%= link_to @product.seller.name, seller_path(@product.seller), class: 'product-links' %> <span class="index-comment">(<%= @product.seller.country if @product.seller %>)</span>
          <br />
          Material: <%= link_to @product.material.name, @product.material, class: 'product-links' %>
        
          <div class="country">
            <div class="price">$<%= @product.price %></div>
          </div>
        <br />
        <center>
            <dl class="dl-horizontal">
              <% if @product.purity %>
                <dt>Purity</dt>
                <dd><%= "#{@product.purity}%" if @product.purity %></dd>
              <% end %>
              <% if @product.length %>
                <dt>Length</dt>
                <dd><%= "#{@product.length}nm ~" if @product.length %> <%= "#{@product.length_two}nm" if @product.length_two %></dd>
              <% end %>
              <% if @product.diameter %>
                <dt>Diameter</dt>
                <dd><%= "Ø #{@product.diameter}" if @product.diameter %></dd>
              <% end %>
              <%# if @product.solvent %>
              <%# else %>
                <%#<dt>Solvent</dt>
                <dd><%= @product.solvent %><%#</dd>
              <%# end %>
              <% if @product.surface_area %>
                <dt>Surface area</dt>
                <dd><%= "#{@product.surface_area} μm" %> </dd>
              <% end %>
            </dl>
          </center>
        <%#<% if @seller.material_id? %><%#= link_to @seller.material.name, @seller.material, class: 'sub-title' %><%# end %>

        <center>
          <% if @product.product_image? %>
            <%= image_tag @product.product_image.url(:small), class: 'img-responsive' %>
          <% else %>
            <%= image_tag '/thumbnail.png', class: 'img-responsive' %>
          <% end %>
        </center>
      </div>
      <%# END OF SELLER PROFILE MOBILE %>
      <hr>

    </div>
    <div class="nano-card ">
    <div class="sub-title">OTHER PRODUCTS</div>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Product</th>
            <th>Store</th>
            <th>Material</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
            <td><%= link_to product.name, product %></td>
            <td><%= link_to product.seller.name, product.seller %></td>
            <td><%= link_to product.material.name, product.material %></td>
            <td><% if product.price %>$<%= product.price %><% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="paginate-parent">
          <div class="paginate">
              <%= paginate @products %>
          </div>
      </div>
    </div>
  </div>
</div>
<div class="row">

  <div class="col-xs-6 col-md-3">

    </div>
    <div class="col-xs-12 col-md-8">
      <br />
      <br />

      <div class="sub-title">OTHER SELLERS</div>
      <br />      

      <% @sellers.each do |seller| %>
        <div class="col-sm-4 col-md-4">
          <div class="thumbnail">
            <% if seller.logo? %>
              <%= link_to (image_tag seller.logo.url(:small)), seller, class: 'seller-preview' %>
            <% else %>
              <%= link_to (image_tag '/thumbnail.png'), seller, class: 'seller-preview' %>
            <% end %>
            <div class="caption">
              <h4 style="font-size:16px;"><%= link_to seller.name.truncate(16), seller %></h4>
              <div style="font-size:12px;"><%= link_to seller.country, seller %></div>
            </div>
            <div class="panel-footer">
              <div class="row">
                <%#div class="col-xs-8 col-sm-6">
                  <% &#9889; rating %>
                <%#/div>
                <%#div class="col-xs-4 col-sm-6"%>
                <center><%= link_to "Visit", @random_seller, class: 'white-text' %></center>
                <%#/div%>
              </div>                  
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>