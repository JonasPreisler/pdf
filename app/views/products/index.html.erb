

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-content">
                <div class="col-sm-6 search-right">
                    <div class="form-group">
                        <%= text_field_tag :term, params[:term], placeholder: "Search Product", class: 'form-control' %>
                    </div>
                </div>

                <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                    <thead>
                    <tr>

                        <th data-toggle="true">Material</th>
                        <th data-hide="phone">Supplier</th>
                        <th data-hide="phone">Price</th>
                        <th data-hide="all">Description</th>
                        <th data-hide="phone,tablet" >Reviews</th>
                        <th data-hide="all">Qty</th>
                        <th data-hide="phone">Status</th>
                        <th class="text-right" data-sort-ignore="true">Action</th>

                    </tr>
                    </thead>
                    <tbody>
                    <% @products.each do |product| %>
                        <tr>
                            <td>
                                <%= link_to product.material.name, material_path(product.material)%>
                            </td>
                            <td>
                                <%= link_to product.shop.name, shop_path(product.shop) %>
                            </td>
                             <td>
                                $<%= product.price %> 
                            </td>

                            <td>
                                <%= product.description %>
                            </td>
                            <td>
                                <%= product.stock %>
                            </td>

                            <td>
                                <input type="text" name="price" placeholder= "5" onchange="$('#gram_value-<%=product.id%>').html( '$' + ' ' + ($(this).val() * <%= product.price %>)); "> <small class="text-muted"><%= product.product_type %></small> | 
                                <span id="gram_value-<%=product.id%>">$ <%= product.price %></span>  
                                <button class="btn btn-primary pull-right">Add to cart</button>
                            </td>
                            <td>
                                <span class="label label-primary">In Stock</span>
                            </td>
                            <td class="text-right">
                                <div class="btn-group">
                                    <%= link_to 'Buy', show_product_path(product.shop.slug, product.slug),:class=>"btn-white btn btn-xs" %>
                                    <% if current_shop(product)%>
                                       <%= link_to 'Edit', edit_product_path(product),:class=>"btn-white btn btn-xs" %>
                                   <% end %>
                                </div>
                            </td>
                        </tr>
                    <% end %>

                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>


</div>

<% content_for :javascript do %>

<script type="text/javascript">


$(function() {

    $('.footable').footable();

});

</script>

<% end %>


