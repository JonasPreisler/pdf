<div class="row">
	<div class="col-md-6 col-md-6">
		<%= line_chart @bot_users.group_by_day(:created_at).count %>
	</div>
	<div class="col-md-6 col-md-6">
		<%= pie_chart @bot_users.group(:gender).count %>
	</div>
</div>
<br />
<br />
<%= geo_chart @bot_users.group(:country).count %>
<br />

<div class="nano-card">
  <table class="table table-hover">
      <thead>
      <tr>
        <th>ID</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Messenger User ID</th>
        <th>Gender</th>
        <th>Timezone</th>
        <th>Source</th>
        <th>Country</th>
      </tr>
      </thead>
      <tbody>
        <% @bot_users.each do |bot_user| %>
            <tr>
              <td><%= bot_user.id %></td>
              <td><%= bot_user.first_name %></td>
              <td><%= bot_user.last_name.truncate(3) if bot_user.last_name%></td>
              <td><%= bot_user.messenger_user_id.truncate(3) %></td>
              <td><%= bot_user.gender %></td>
              <td><%= bot_user.timezone %></td>
              <td><%= bot_user.source %></td>
              <td><%= bot_user.country if bot_user.country %></td>
            </tr>
        <% end %>
      </tbody>
  </table>
  <div class="paginate-parent">
      <div class="paginate">
          <%= paginate @bot_users %>
      </div>
  </div>
</div>

<div style="padding-bottom:100px;"></div>